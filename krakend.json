{
    "$schema": "https://www.krakend.io/schema/v3.json",
    "version": 3,
    "name": "KrakenD - API Gateway",
    "timeout": "3000ms",
    "cache_ttl": "300s",
    "output_encoding": "json",
    "disable_rest": true,
    "endpoints": [
        {
            "endpoint": "/v1/blog/all",
            "method": "GET",
            "output_encoding": "json",
            "backend": [
                {
                    "url_pattern": "/blog/all",
                    "encoding": "json",
                    "sd": "static",
                    "method": "GET",
                    "disable_host_sanitize": false,
                    "host": [
                        "http://server-blogs:8080"
                    ],
                    "is_collection": true,
                    "target": ""
                }
            ]
        },
        {
            "endpoint": "/v1/blog/{id}",
            "method": "GET",
            "output_encoding": "json",
            "backend": [
                {
                    "url_pattern": "/blog/{id}",
                    "encoding": "json",
                    "sd": "static",
                    "method": "GET",
                    "disable_host_sanitize": false,
                    "host": [
                        "http://server-blogs:8080"
                    ]
                }
            ]
        },
        {
            "endpoint": "/v1/blog/new",
            "method": "POST",
            "output_encoding": "json",
            "backend": [
                {
                    "url_pattern": "/blog/new",
                    "encoding": "json",
                    "sd": "static",
                    "method": "POST",
                    "disable_host_sanitize": false,
                    "host": [
                        "http://server-blogs:8080"
                    ]
                }
            ]
        },
        {
            "endpoint": "/v1/blog/{id}",
            "method": "POST",
            "output_encoding": "json",
            "backend": [
                {
                    "url_pattern": "/blog/{id}",
                    "encoding": "json",
                    "sd": "static",
                    "method": "POST",
                    "disable_host_sanitize": false,
                    "host": [
                        "http://server-blogs:8080"
                    ]
                }
            ]
        },
        {
            "endpoint": "/v1/blog/{id}",
            "method": "DELETE",
            "output_encoding": "json",
            "backend": [
                {
                    "url_pattern": "/blog/{id}",
                    "encoding": "json",
                    "sd": "static",
                    "method": "DELETE",
                    "disable_host_sanitize": false,
                    "host": [
                        "http://server-blogs:8080"
                    ]
                }
            ]
        },
        {
            "endpoint": "/v1/task/all",
            "method": "GET",
            "output_encoding": "json",
            "backend": [
                {
                    "url_pattern": "/task/all",
                    "encoding": "json",
                    "sd": "static",
                    "method": "GET",
                    "disable_host_sanitize": false,
                    "host": [
                        "http://server-tasks:8080"
                    ],
                    "is_collection": true,
                    "target": ""
                }
            ]
        },
        {
            "endpoint": "/v1/task/{id}",
            "method": "GET",
            "output_encoding": "json",
            "backend": [
                {
                    "url_pattern": "/task/{id}",
                    "encoding": "json",
                    "sd": "static",
                    "method": "GET",
                    "disable_host_sanitize": false,
                    "host": [
                        "http://server-tasks:8080"
                    ]
                }
            ]
        },
        {
            "endpoint": "/v1/task/new",
            "method": "POST",
            "output_encoding": "json",
            "backend": [
                {
                    "url_pattern": "/task/new",
                    "encoding": "json",
                    "sd": "static",
                    "method": "POST",
                    "disable_host_sanitize": false,
                    "host": [
                        "http://server-tasks:8080"
                    ]
                }
            ]
        },
        {
            "endpoint": "/v1/task/{id}",
            "method": "POST",
            "output_encoding": "json",
            "backend": [
                {
                    "url_pattern": "/task/{id}",
                    "encoding": "json",
                    "sd": "static",
                    "method": "POST",
                    "disable_host_sanitize": false,
                    "host": [
                        "http://server-tasks:8080"
                    ]
                }
            ]
        },
        {
            "endpoint": "/v1/task/{id}",
            "method": "DELETE",
            "output_encoding": "json",
            "backend": [
                {
                    "url_pattern": "/task/{id}",
                    "encoding": "json",
                    "sd": "static",
                    "method": "DELETE",
                    "disable_host_sanitize": false,
                    "host": [
                        "http://server-tasks:8080"
                    ]
                }
            ]
        },
        {
            "endpoint": "/v1/all",
            "method": "GET",
            "output_encoding": "json",
            "backend": [
                {
                    "url_pattern": "/blog/all",
                    "encoding": "json",
                    "sd": "static",
                    "method": "GET",
                    "disable_host_sanitize": false,
                    "host": [
                        "http://server-blogs:8080"
                    ],
                    "group": "blogs",
                    "is_collection": true,
                    "target": ""
                },
                {
                    "url_pattern": "/task/all",
                    "encoding": "json",
                    "sd": "static",
                    "method": "GET",
                    "disable_host_sanitize": false,
                    "host": [
                        "http://server-tasks:8080"
                    ],
                    "group": "tasks",
                    "is_collection": true,
                    "target": ""
                }
            ]
        }
    ],
    "sequential_start": true,
    "extra_config": {
        "telemetry/opencensus": {
            "sample_rate": 100,
            "reporting_period": 0,
            "enabled_layers": {
                "backend": true,
                "router": true
            },
            "exporters": {
                "jaeger": {
                    "endpoint": "http://jaeger:14268/api/traces",
                    "service_name": "krakend"
                },
                "prometheus": {
                    "port": 9091,
                    "namespace": "krakend",
                    "tag_host": false,
                    "tag_path": true,
                    "tag_method": true,
                    "tag_statuscode": false
                }
            }
        },
        "telemetry/influx": {
            "address": "http://influxdb:8086",
            "ttl": "25s",
            "buffer_size": 100,
            "username": "krakend",
            "password": "krakend"
        },
        "telemetry/metrics": {
            "collection_time": "15s",
            "listen_address": ":8090"
        }
    }
}